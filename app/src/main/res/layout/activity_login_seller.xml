<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterSeller.LoginSellerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفضل بتسجيل الدخول"
            android:layout_marginTop="40dp"
            android:textSize="18dp"
            android:id="@+id/loginText"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/loginText"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="3dp"
            android:background="@mipmap/profile"/>
        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:hint="البريد الالكترونى"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/email"
            android:background="@drawable/register_view_border"
            android:layout_below="@+id/loginText"/>
        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:hint="كلمة المرور"
            android:padding="8dp"
            android:id="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/register_view_border"
            android:layout_below="@+id/email"/>
        <Button
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@+id/password"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="تسجيل دخول"
            android:id="@+id/loginButton"
            android:textStyle="bold"
            android:background="@color/green"
            android:textColor="#ffffff"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:id="@+id/forget_password"
            android:layout_marginTop="18dp"
            android:text="نسيت كلمة المرور  ؟"
            android:textSize="20dp"
            android:textColor="#1565C0"/>
        <View
            android:layout_width="139dp"
            android:layout_height="1dp"
            android:layout_below="@+id/forget_password"
            android:id="@+id/viewLine"
            android:layout_centerHorizontal="true"
            android:background="#1565C0" />

        <Button
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@+id/viewLine"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text=" انشاء حساب جديد"
            android:id="@+id/RegisterSellerButton_ID"
            android:textStyle="bold"
            android:background="@color/yello"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </RelativeLayout>


</RelativeLayout>