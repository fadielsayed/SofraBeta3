<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/relative_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="#ece9e9"
            android:src="@drawable/sofraimage" />

        <TextView
            android:id="@+id/product_nameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/food_image"
            android:text=" احصل على خصم 50% "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product2_nameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/food_image"
            android:text="محلات الفطيره الدمشقيه"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_details1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="51dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/food_image"
            android:text="سانداوتش راب برجر"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/food_details2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_details1"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/food_image"
            android:layout_marginRight="6dp"
            android:textSize="12dp"
            android:text="دجاج متبله" />

    </RelativeLayout>
</android.support.v7.widget.CardView>