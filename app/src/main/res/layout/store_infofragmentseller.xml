<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="الحاله"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/simpleSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="152dp"
                    android:layout_marginLeft="152dp"
                    android:layout_marginEnd="152dp"
                    android:layout_marginRight="152dp"
                    android:layout_marginBottom="0dp" />

                <TextView
                    android:id="@+id/Ans_status"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="75dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginEnd="171dp"
                    android:layout_marginRight="171dp"
                    android:layout_toStartOf="@+id/status"
                    android:layout_toLeftOf="@+id/status"
                    android:text="مفتوح"
                    android:textColor="@color/green"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative1"
                android:layout_marginTop="6dp"
                android:background="#d9d6d6" />

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/view1"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="المدينه"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ans_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="86dp"
                    android:layout_marginLeft="86dp"
                    android:layout_marginEnd="156dp"
                    android:layout_marginRight="156dp"
                    android:layout_toStartOf="@+id/city"
                    android:layout_toLeftOf="@+id/city"
                    android:text="الرياض"
                    android:textColor="#7b7a7a"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative2"
                android:layout_marginTop="6dp"
                android:background="#d9d6d6" />

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/view2"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="الحى"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ans_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="84dp"
                    android:layout_marginLeft="84dp"
                    android:layout_marginEnd="171dp"
                    android:layout_marginRight="171dp"
                    android:layout_toStartOf="@+id/region"
                    android:layout_toLeftOf="@+id/region"
                    android:text="الروضه"
                    android:textColor="#7b7a7a"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative3"
                android:layout_marginTop="6dp"
                android:background="#d9d6d6" />

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/view3"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/request_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="وقت الطلبات"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ans_request_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="49dp"
                    android:layout_marginLeft="49dp"
                    android:layout_marginRight="165dp"
                    android:text="جميع أيام الأسبوع"
                    android:textColor="#7b7a7a"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative4"
                android:layout_marginTop="6dp"
                android:background="#d9d6d6" />

            <RelativeLayout
                android:id="@+id/relative5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/view4"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="أوقات التوصيل"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ans_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="62dp"
                    android:layout_marginLeft="62dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_toStartOf="@+id/delivery_time"
                    android:layout_toLeftOf="@+id/delivery_time"
                    android:text="من8 ص:10 م"
                    android:textColor="#7b7a7a"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative5"
                android:layout_marginTop="6dp"
                android:background="#d9d6d6" />

            <RelativeLayout
                android:id="@+id/relative6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/view5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/delivery_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="طريقة التوصيل"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ans_delivery_method"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="85dp"
                    android:layout_marginEnd="78dp"
                    android:layout_marginRight="78dp"
                    android:layout_toStartOf="@+id/delivery_method"
                    android:layout_toLeftOf="@+id/delivery_method"
                    android:text="مندوب"
                    android:textColor="#7b7a7a"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative6"
                android:layout_marginTop="6dp"
                android:background="#d9d6d6" />

            <RelativeLayout
                android:id="@+id/relative7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/view6"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/minimum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="الحد الأدنى"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ans_minimum"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="111dp"
                    android:layout_marginRight="111dp"
                    android:layout_toStartOf="@+id/minimum"
                    android:layout_toLeftOf="@+id/minimum"
                    android:text="50 ريال"
                    android:textColor="#7b7a7a"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative7"
                android:layout_marginTop="6dp"
                android:background="#d9d6d6" />

            <RelativeLayout
                android:id="@+id/relative8"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/view7"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/delivery_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="رسوم التوصيل"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ans_delivery_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="101dp"
                    android:text="10ريال"
                    android:textColor="#7b7a7a"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative8"
                android:layout_marginTop="6dp"
                android:background="#d9d6d6" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>