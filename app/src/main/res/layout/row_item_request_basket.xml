<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    android:id="@+id/row_Requestitem_ID"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/basicRelative"
            android:padding="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relative_food">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/food_image"
                    android:background="#ece9e9"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/food_image"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:text="ساندوتش برجر تركى"
                    android:id="@+id/basketordername_ID"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/food_image"
                    android:layout_marginRight="10dp"
                    android:id="@+id/Relative_quantity"
                    android:layout_below="@+id/basketordername_ID"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        android:text="الكميه"
                        android:id="@+id/quantity"
                        android:layout_alignParentRight="true"/>
                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:id="@+id/relative_number"
                        android:layout_toLeftOf="@+id/negative"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:background="@drawable/register_view_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/counter"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>
                    </RelativeLayout>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="-"
                        android:layout_toLeftOf="@+id/quantity"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:id="@+id/negative"
                        android:onClick="decreaseInteger"
                        android:layout_marginRight="6dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:background="@color/green"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="+"
                        android:layout_toLeftOf="@+id/relative_number"
                        android:id="@+id/plus"
                        android:onClick="increaseInteger"
                        android:layout_marginRight="10dp"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:background="@color/green"/>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="السعر"
                    android:layout_centerHorizontal="true"
                    android:textSize="17dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/textPrice"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textPrice"
                    android:text="5 ريال"
                    android:id="@+id/price"
                    android:layout_marginTop="3dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/relative_food"
                android:layout_marginTop="15dp"
                android:gravity="left|center"
                android:background="@color/gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="ريال"
                    android:id="@+id/total_text"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/total_text"
                    android:layout_marginLeft="3dp"
                    android:text="الاجمالى : "
                    android:textColor="@color/black"/>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
